    text-align: center;
    padding: 60px 20px;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
}

.indoor-header h1 {
    font-size: 48px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 3px;
}

.indoor-header h2 {
    font-size: 24px;
    font-weight: 300;
    color: #cccccc;
    letter-spacing: 2px;
}

