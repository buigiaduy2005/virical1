    padding: 40px 0;
    background-color: #000000;
}

.indoor-category h3 {
    font-size: 32px;
    font-weight: 600;
    color: #ffffff;
    text-align: center;
    margin-bottom: 40px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

