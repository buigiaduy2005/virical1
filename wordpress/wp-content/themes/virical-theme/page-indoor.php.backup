    padding: 20px 15px 15px;
    font-size: 14px;
    font-weight: 500;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.indoor-product:hover .indoor-product-name {
    opacity: 1;
}

